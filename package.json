{
  "name": "sheltie",
  "version": "0.1.0",
  "description": "SQL backend for question data",
  "main": "index.js",
  "repository": "ssh://git@bitbucket.org/knowledgehound/sheltie",
  "author": "Allen Nelson <allen@knowledgehound.com>",
  "license": "All Rights Reserved",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "src/*.{js,jsx,json,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "{index.js,package.json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "printWidth": 100,
    "singleQuote": true
  },
  "dependencies": {
    "@glennsl/bs-json": "^5.0.1",
    "bs-platform": "^5.0.6",
    "bs-postgres": "git://github.com/adnelson/bs-postgres#top_level_module",
    "knex": "^0.19.4",
    "pg": "^7.12.1"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.4.9",
    "husky": "^3.0.5",
    "lint-staged": "^9.3.0",
    "onchange": "^6.1.0",
    "prettier": "^1.18.2",
    "sqlite3": "^4.1.0",
    "why-is-node-running": "^2.1.0"
  },
  "scripts": {
    "build": "yarn run re:build && yarn run css:build && node scripts/build.js",
    "re:build": "bsb -make-world",
    "re:cleanbuild": "bsb -clean-world && bsb -make-world",
    "re:watch": "onchange -k -i -d 500 'src/**/*.re' '__tests__/**/*.re' bsconfig.json -- sh -c 'bsb -make-world'",
    "re:test": "yarn re:build && jest __tests__",
    "re:test:watch": "onchange -v -k -i -d 500 'src/**/*.bs.js' '__tests__/**/*.bs.js' -- sh -c 'clear && jest __tests__'",
    "re:buildandtest:watch": "onchange -v -k -i -d 500 'src/**/*.re' '__tests__/**/*.re' '__tests__/**/*.json' -- sh -c 'clear && bsb && jest __tests__'",
    "re:format": "bsrefmt --in-place --print-width 100 src/*.re",
    "prepush": "lint-staged",
    "format": "prettier --write index.js \"src/**/*.{js,jsx,json,scss}\""
  }
}
